<link rel="canonical" href="{{ site.url + page.url }}">
<meta property="og:url" content="{{ site.url + page.url }}">

<meta property="og:title" content="{{ title }}">

<meta property="og:locale" content="{{ site.lang }}">
<meta property="og:site_name" content="{{ site.name }}">

<meta property="og:image" content="{{ site.url }}/preview-images/{{ page.fileSlug | stripVersionPrefix }}.png">
<meta property="og:image:type" content="image/png">
<meta property="og:image:alt" content="{{ title }} | {{ description }}">

{% if description %}
    <meta name="description" content="{{ description }}">
    <meta property="og:description" content="{{ description }}">
{% endif %}

<meta name="generator" content="Eleventy (11ty.dev)">

{%- if seo.twitter -%}
    {%- for name, value in seo.twitter -%}
        {% if value %}
            <meta name="twitter:{{ name }}" content="{{ value }}">
        {% endif %}
    {%- endfor -%}
{%- endif -%}

<link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png">
<link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png">
<link rel="icon" type="image/png" sizes="192x192" href="/android-chrome-192x192.png">
<link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png">
<link rel="manifest" href="/site.webmanifest">
<link rel="mask-icon" href="/safari-pinned-tab.svg" color="#e64a3c">
<meta name="apple-mobile-web-app-title" content="processwire.dev">
<meta name="application-name" content="processwire.dev">
<meta name="msapplication-TileColor" content="#e64a3c">
<meta name="theme-color" content="#e64a3c">
